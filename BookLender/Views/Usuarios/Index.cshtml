@model IEnumerable<BookLender.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Registros";
}

<div class="container mt-4">
    <h1 class="text-center">Registro de Libros Prestados</h1>

    <div class="form-group mt-3 mb-3">
        <form method="get" asp-action="Index" class="d-flex justify-content-center">
            <input type="text" name="searchQuery" class="form-control me-2" style="width:300px" value="@ViewContext.HttpContext.Request.Query["searchQuery"]" placeholder="Buscar..." />
            <button type="submit" class="btn btn-info">Buscar</button>
        </form>
    </div>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Nuevo Registro</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreDelLibro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaDelPrestamo)
                </th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreDelLibro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaDelPrestamo)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.Id">Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
